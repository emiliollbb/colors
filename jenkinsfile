pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                url: 'https://github.com/emiliollbb/colors.git'
            }
        }
        stage('Version') {
            steps {
                sh '''
                    myversion=$(git log -1 | head -1 | sed 's/commit //')
                    echo $myversion
                    echo '#define VERSION' $myversion > version.h
                '''
            }
        }
        stage('Build') {
            steps {
                sh '''
                make colors.zip
                '''
            }
        }
        stage('Deploy') {
            steps {
            	sh '''
			echo 'Deploy...'
            		#scp $WORKSPACE/colors.zip pi@192.168.1.10:/home/pi/colors.zip
            	'''
            }
        }
        
    }
}

